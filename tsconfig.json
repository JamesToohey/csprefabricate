{
    "extends": "@tsconfig/node-lts/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "module": "preserve",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "strict": true,
        "target": "ES2024",
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", ".yarn"]
}
