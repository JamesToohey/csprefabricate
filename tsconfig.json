{
    "extends": "@tsconfig/node-lts/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "module": "preserve",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "paths": {
            "helpers": ["./src/helpers"],
            "types": ["./src/types"],
            "utils": ["./src/utils"],
        },
        "strict": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
